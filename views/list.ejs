<%- include('header'); -%>

    <div class="box" id="heading">
      <h1><%= listTitle %> </h1>
    </div>

    <div class="box">
      <% items.forEach(function(item){ %>
      <form action="/delete"  method="POST">
        <div class="item">
      <input type="checkbox" name="todoId" value="<%= item._id %>" onChange="this.form.submit()" />
      <input type="hidden" name="listTitle" value="<%= listTitle %>" ></input>
        <p> <%= item.name %> </p>
      </div>
      </form>
  <% }); %>


    <form class="item" action="/"  method="POST" >
      <input type="text" name="todo" placeholder="New Item" autocomplete="off" />
      <button type="submit" name="listTitle" value=<%= listTitle %>>+</button>
    </form>

  </div>


<%- include('footer'); -%>